<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreen">

    <LinearLayout
        android:id="@+id/splashscreenview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/splashscreenimg"
            android:layout_width="@dimen/logo_dime"
            android:layout_height="@dimen/logo_dime"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logomines"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/splashscreentext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Petite Annonces de l'EMSE"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10pt"/>
    </LinearLayout>

</RelativeLayout>